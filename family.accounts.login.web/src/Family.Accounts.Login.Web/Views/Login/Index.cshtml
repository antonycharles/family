@model UserAuthenticationRequest
@{
    ViewData["Title"] = "Log In";
}
<div asp-validation-summary="ModelOnly">
</div>
<form asp-action="Index" method="post" class="form-signin">
    <h1 class="h3 mb-3 fw-normal">Log In</h1>
    <input type="hidden" asp-for="AppSlug" />
    <div class="form-floating">
      <input asp-for="Email" class="form-control" id="floatingInput" placeholder="">
      <label>Email</label>
    </div>    
    <span asp-validation-for="Email" class="text-danger"></span>
    <div class="form-floating">
      <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
      <label>Password</label>
    </div>
    <span asp-validation-for="Password" class="text-danger"></span>
    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
    <a asp-controller="ResetPassword" class="w-100 btn btn-link btn-sm">Forgot Password?</a>
    <hr/>
    <a asp-controller="SignUp" class="w-100 btn btn-link text-success fw-bolder">Sign Up</a>

</form>
