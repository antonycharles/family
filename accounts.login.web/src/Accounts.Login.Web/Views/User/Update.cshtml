@model UserUpdateViewModel
@{
    ViewData["Title"] = "User update";
}
<div asp-validation-summary="ModelOnly"></div>
<form asp-action="Index" method="post" class="form-signin">
    <h1 class="h3 mb-3 fw-normal">User Update</h1>
    <div class="form-floating">
      <input asp-for="Name" class="form-control" id="floatingInput" placeholder="">
      <label>Name</label>
    </div>    
    <span asp-validation-for="Name" class="text-danger"></span>
    <div class="form-floating mt-3">
      <input asp-for="Email" class="form-control" id="floatingInput" placeholder="">
      <label>Email</label>
    </div>    
    <span asp-validation-for="Email" class="text-danger"></span>
    <div class="mb-3"></div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Salvar</button>
    <a asp-controller="Home" asp-action="Index" class="w-100 btn btn-link btn-sm">Home</a>
</form>
