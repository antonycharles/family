@model ProfileResponse
@{
    ViewData["Title"] = "Profile";
}
<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <h1 class="navbar-brand fs-3">
        <button class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
            </svg>
        </button> @Model.Name
    </h1>
    <div class="d-flex">
      <button onclick="window.history.back()" type="button" class="btn btn-light">Return</button>
    </div>
  </div>
</nav>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Permission</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    @if(Model.Permissions != null && Model.Permissions.Count > 0){
        @foreach(var permission in Model.Permissions.OrderBy(o => o.Name))
        {
            <tr>
                <td class="align-middle">@permission.Name</td>
                <td class="align-middle">@permission.Status.GetDisplayName()</td>
            </tr>
        }
    }else{
        <tr>
            <td colspan="3">No records found!</td>
        </tr>
    }
  </tbody>
</table>
